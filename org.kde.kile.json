{
    "id": "org.kde.kile",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "kile.sh",
    "rename-icon": "kile",
    "finish-args": [
        "--device=dri",
        "--filesystem=home",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "separate-locales": false,
    "add-extensions": {
        "org.freedesktop.Sdk.Extension.texlive": {
            "directory": "texlive",
            "version": "23.08"
        }
