                    "sha256": "b3fdee058879675f6979c553fb6172b160ca79ffd0f170f51379326b7922941a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1220,
                        "stable-only": true,
                        "url-template": "https://github.com/gnustep/tools-make/archive/make-$version.tar.gz"
                    }
                }
            ]
        },
